{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}